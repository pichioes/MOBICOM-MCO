<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goals_popup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"> <!-- Semi-transparent overlay -->

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/popup_background"
        android:padding="24dp"
        android:elevation="8dp">

        <!-- Header -->
        <TextView
            android:id="@+id/popup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit"
            android:text="Change Goals"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Subtitle -->

        <!-- Input with icon -->
        <TextView
            android:id="@+id/popup_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/outfit"
            android:text="Suggested = XXXX ml"
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goals_icon"
                android:layout_width="78dp"
                android:layout_height="89dp"
                android:contentDescription="Goals icon"
                android:src="@drawable/water_drop" />

            <EditText
                android:id="@+id/goals_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#2962FF"
                android:fontFamily="@font/outfit"
                android:hint="Enter ml"
                android:inputType="number"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Confirm button -->
        <Button
            android:id="@+id/confirm_goals_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/background"
            android:fontFamily="@font/outfit"
            android:text="CONFIRM"
            android:textAllCaps="true"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</FrameLayout>
