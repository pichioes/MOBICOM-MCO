<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B668C"
    android:backgroundTintMode="add"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="205dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="152dp"
                android:layout_height="234dp"
                android:layout_gravity="center|top"
                android:src="@drawable/profiletag" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:src="@drawable/profile_pic" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="116dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Lianne Balbastro"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="#3A3838" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Weight"
                    android:textColor="@color/textcolor" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif"
                    android:text="120lbs"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Height"
                    android:textColor="@color/textcolor" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif"
                    android:text="165cm"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Goal"
                    android:textColor="@color/textcolor" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="2150ml"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="#396388" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Notifications"
                    android:textColor="@color/textcolor" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="301dp"
            android:layout_gravity="center"
            android:background="@drawable/profileoptions"
            android:clipToOutline="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/myaccount_layer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/MyAccountIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/my_account" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="253dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <TextView
                        android:id="@+id/MyAccountMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Account"
                        android:textAlignment="viewStart"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/MyAccountDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Make Changes to your account"
                        android:textColor="#999696"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/MyAccountArrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/forward_arrow" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goals_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/MyGoalsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/goals_icon" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="253dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <TextView
                        android:id="@+id/MyGoalsMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Goals"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/MyGoalsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit your water intake goals"
                        android:textColor="#999696"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/MyGoalsArrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/forward_arrow" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/NotifsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/notifs_icon" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="253dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <TextView
                        android:id="@+id/NotifsMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/NotifsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage your notifications"
                        android:textColor="#999696"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/NotifsArrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/forward_arrow" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout_layer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/LogoutIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logout_icon" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="253dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <TextView
                        android:id="@+id/LogoutMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/LogoutDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Further secure your account for safety"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/LogoutArrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/forward_arrow" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deleteacc_layer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/DeleteAccIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/delete_icon" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="253dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <TextView
                        android:id="@+id/DeleteAccMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete Account"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/DeleteAccDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permanently Delete your account records"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/DeleteAccArrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/forward_arrow" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    </LinearLayout>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_navbar" />

</LinearLayout>
