<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/analyticsCalendarLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#294267"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toggle Buttons -->

    <!-- Calendar with integrated progress rings -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/toggle_bg" />

    <!-- Optional: Keep the large progress ring for selected date -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/calendarProgressComposeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" >

    </androidx.compose.ui.platform.ComposeView>

    <!-- Water Report -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/waterReportTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:fontFamily="@font/outfit"
            android:text="Water Report"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F6F6F6"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/report_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/weeklyAverageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Average: 400ml / Day" />

            <TextView
                android:id="@+id/monthlyAverageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Average: 540ml / Day" />

            <TextView
                android:id="@+id/averageCompletionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Completion: 76%" />

            <TextView
                android:id="@+id/drinkFrequencyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink Frequency: 4 Times / Day" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>