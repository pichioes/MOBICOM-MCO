<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_mask"
        android:clipToOutline="true"
        android:src="@drawable/profile_pic" />

    <!-- User Name -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Maxene Balbastro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/outfit" />

    <!-- User Email -->
    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="maxenebalbastro@petra.africa"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/outfit" />

    <!-- First Name Input -->
    <TextView
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="First Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/outfit" />

    <EditText
        android:id="@+id/edit_firstname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputtext"
        android:text="Maxene"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit" />

    <!-- Last Name Input -->
    <TextView
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Last Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/outfit" />

    <EditText
        android:id="@+id/edit_lastname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputtext"
        android:text="Balbastro"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit" />

    <!-- Email Input -->
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email Address"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/outfit" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputtext"
        android:text="maxenebalbastro@gmail.com"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit" />

    <!-- Age, Height, Weight in Horizontal Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <!-- Age Spinner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/outfit" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/inputtext"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Height Spinner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/outfit" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/inputtext"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Weight Spinner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/outfit" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/inputtext"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Gender Selection (Male / Female as Buttons) -->
    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gender"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/outfit" />

    <!-- Buttons for Male and Female in a container -->
    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Female Button -->
        <Button
            android:id="@+id/femaleButton"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/outfit"
            android:onClick="onFemaleClick"
            android:text="Female"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Male Button -->
        <Button
            android:id="@+id/maleButton"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/outfit"
            android:onClick="onMaleClick"
            android:text="Male"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Update Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:backgroundTint="#64B5F6"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/outfit" />

</LinearLayout>
